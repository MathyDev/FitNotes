<ExerciseWindow>:
	FloatLayout:
		id:exercise_window_layout
		ToggleButton:
			id: standing_filter
			text: "Standing"
			pos_hint:{"x": 0.0,"y":0.75}
			size_hint:(0.1,0.1)
			on_state:
		ToggleButton:
			id: lying_filter
			text: ":Lying"
			pos_hint:{"x": 0.45,"y":0.75}
			size_hint:(0.1,0.1)
			on_state:
		ToggleButton:
			id: seated_filter
			text: "Seated"
			pos_hint:{"x": 0.9,"y":0.75}
			size_hint:(0.1,0.1)
			on_state:
		ToggleButton:
			id: dumbbell_filter
			text: "Dumbbell"
			pos_hint:{"x": 0.0,"y":0.65}
			size_hint:(0.1,0.1)
			on_state:
		ToggleButton:
			id: barbell_filter
			text: "Barbell"
			pos_hint:{"x": 0.45,"y":0.65}
			size_hint:(0.1,0.1)
			on_state:
		ToggleButton:
			id: cable_filter
			text: "Cable"
			pos_hint:{"x": 0.9,"y":0.65}
			size_hint:(0.1,0.1)
			on_state:
